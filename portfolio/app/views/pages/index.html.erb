<div class="bub">

  <div class="row">

    <% @pages.each do |proj| %>
    <div class="col-4 project">

      <img src="<%= proj.cover %>"/>
      <h3><%= proj.title %></h3>
      <p><%= proj.description %></p>

      <% if current_user && current_user.editor? %>
      <h5><%= button_to "Delete", proj, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{proj.title}?" %></h5>


      <button type="button" class="btn btn-primary"><%= link_to 'Edit', :action => 'edit', :id => proj.id  %></button>
      <%end%>

    </div>
    <% end %>

  </div>

  <% if current_user && current_user.editor? %>


    <div class="col-12 add_new">

      <button type="button" class="btn btn-success"><%= link_to 'Add Project to Portfolio', '/pages/new'%></button>
    </div>

  <%end%>

</div>
