
<div class="main">
<div class="portfolio">

	<% @pages.each do |proj| %>
	<div class="project">
    <%= cl_image_tag("#{proj.title}.jpg", :width=>375, :height=>700, :crop=>:fit) %>
    <h3><%= proj.title %></h3>
    <p><%= proj.description %></p>

    <% if current_user && current_user.editor? %>
    <p><%= button_to "Delete", proj, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{proj.title}?" %></p>
      <button type="button" class="btn btn-primary"><%= link_to 'Edit', :action => 'edit', :id => proj.id  %></button>
    <%end%>
  </div>
  <% end %>

  <% if current_user && current_user.editor? %>
  <div class = "add_new">
    <%= link_to 'Add New Project to Portfolio', '/pages/new', class: "btn btn-success" %>
  </div>
  <%end%>

</div>
</div>
